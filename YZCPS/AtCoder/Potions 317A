#include<iostream>
#include<vector>
#include<stack>
#include<string>

using namespace std;

int main() {
	int n, H, X;
	vector<int> vec;
	while (cin >> n >> H >> X) {
		vec.resize(n);
		for (int i = 0; i < n; i++) {
			cin >> vec[i];
		}
		int left = 0, right = n - 1;
		int ans = 0;
		while (left <= right) {
			int mid = (left + right) / 2;
			if (H + vec[mid] >= X) {
				ans = mid;
				right = mid - 1;
			}
			else {
				left = mid + 1;
			}
		}
		cout << ans + 1 << "\n";
	}

}
