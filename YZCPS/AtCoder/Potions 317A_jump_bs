#include<iostream>
#include<vector>

using namespace std;
vector<int> vec;

bool isValid(int h, int x, int i) {
	return h + vec[i] < x;
}

int jump_bs(int n, int h ,int x) {
	int res = -1;
	int step = n;
	while (step > 0) {
		if (isValid(h, x, res + step) && res + step < n) {
			res += step;
		}
		else {
			step /= 2;
		}
	}
	return res + 1; //答案在結果右邊一個
}
//res = -1
//step = 4 = n
// h  x
// 10 15
//[2,4,5,6]
// 0 1 2 3

int main() {
	int n, h, x;
	while (cin >> n >> h >> x) {
		vec.resize(n);
		for (int i = 0; i < n; i++) {
			cin >> vec[i];
		}
		cout << jump_bs(n, h, x) + 1 << "\n";

	}
}
